<div class="col-md-12">
  <h1>Editing Page</h1>
    <%= form_for @post, url: { action: :create } do |f| %>

    <div class="form-group">
      <%= f.label "Title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Category" %>
      <%= f.collection_select(:category_id, Category.all, :id, :title, class: "form_control") %>
    </div>

    <div class="form-group">
      <%= f.label "Body" %>
      <%= f.text_area :body, class: "form-control"%>
    </div>

<%= f.submit 'Update' %>

<% end %>
</div>
